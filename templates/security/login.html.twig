{% extends 'base.html.twig' %}

{% block title %}{{ 'login.title'|trans }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h2 class="text-center mb-4 text-primary">{{ 'login.header'|trans }}</h2>

                {% if error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <form method="post">
                    <div class="mb-3">
                        <label for="username" class="form-label">{{ 'login.email'|trans }}</label>
                        <input type="text" name="_username" id="username" value="{{ last_username }}" required class="form-control" placeholder="{{ 'login.email_placeholder'|trans }}">
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">{{ 'login.password'|trans }}</label>
                        <input type="password" name="_password" id="password" required class="form-control" placeholder="{{ 'login.password_placeholder'|trans }}">
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">{{ 'login.submit'|trans }}</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
