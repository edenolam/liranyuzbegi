{% extends 'base.html.twig' %}

{% block title %}{{ 'about_title'|trans }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center text-light">{{ 'about_header'|trans }}</h1>
        <div class="row mt-4">
            <div class="col-md-8 offset-md-2">
                <p class="lead">{{ 'about_intro'|trans }}</p>

                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h2 class="card-title text-center text-info">{{ 'about_started_title'|trans }}</h2>
                        <p class="card-text">{{ 'about_started_text'|trans|raw }}</p>
                    </div>
                </div>

                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h2 class="card-title text-center text-warning">{{ 'about_why_title'|trans }}</h2>
                        <p class="card-text">{{ 'about_why_text'|trans|raw }}</p>
                    </div>
                </div>

                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h2 class="card-title text-center text-success">{{ 'about_journey_title'|trans }}</h2>
                        <p class="card-text">{{ 'about_journey_text'|trans|raw }}</p>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <p class="font-italic">
                        <strong>{{ 'about_quote'|trans }}</strong>
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
