{% extends 'base.html.twig' %}

{% block title %}Song{% endblock %}

{% block body %}
    <h1>Song</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ song.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ song.title }}</td>
            </tr>
            <tr>
                <th>Artist</th>
                <td>{{ song.artist }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ song.year }}</td>
            </tr>
            <tr>
                <th>Album</th>
                <td>{{ song.album }}</td>
            </tr>
            <tr>
                <th>CoverImage</th>
                <td>{{ song.coverImage }}</td>
            </tr>
            <tr>
                <th>AudioFile</th>
                <td>{{ song.audioFile }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_song_index') }}">back to list</a>

    <a href="{{ path('app_admin_song_edit', {'id': song.id}) }}">edit</a>

    {{ include('admin/song/_delete_form.html.twig') }}
{% endblock %}
