{% extends 'base.html.twig' %}

{% block title %}Song index{% endblock %}

{% block body %}
    <h1>Song index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Artist</th>
                <th>Year</th>
                <th>Album</th>
                <th>CoverImage</th>
                <th>AudioFile</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for song in songs %}
            <tr>
                <td>{{ song.id }}</td>
                <td>{{ song.title }}</td>
                <td>{{ song.artist }}</td>
                <td>{{ song.year }}</td>
                <td>{{ song.album }}</td>
                <td>{{ song.coverImage }}</td>
                <td>{{ song.audioFile }}</td>
                <td>
                    <a href="{{ path('app_admin_song_show', {'id': song.id}) }}">show</a>
                    <a href="{{ path('app_admin_song_edit', {'id': song.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_song_new') }}">Create new</a>
{% endblock %}
